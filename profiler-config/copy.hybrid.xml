        <section target="cpu,gpu" label="device_to_host">
            <bounds>
                <func name="(anonymous namespace)::copy_from_device"/>
            </bounds>
            <allow_concurrency/>
            <method>profile</method>
            <interval>100</interval>
        </section>
    </sections>
</config>
